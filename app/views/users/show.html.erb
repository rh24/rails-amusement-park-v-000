<% if !!flash[:message] %>
  <%= flash[:message] %>
<% end %>

<div class="info">
  <% if @user.admin %>
    <p>ADMIN</p>
  <% end %>
  <p>Name: <%= @user.name %></p>
  <p>Mood: <%= @user.mood %></p>
  <p>Tickets: <%= @user.tickets %></p>
  <p>Height: <%= @user.height %></p>
  <% if current_user == @user %>
    <%= link_to "Edit", edit_user_path(@user) %>
  <% end %>
  <p><%= link_to "See attractions", attractions_path %></p>
</div>

<%= link_to "Log Out", signout_path %>
