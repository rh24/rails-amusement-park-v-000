<h1>Listing Attractions</h1>

<table>
  <th>
    <tr>
      <th colspan="3"></th>
    </tr>
  </th>

  <tbody>
    <tr>
      <td><strong>Picture</strong></td>
      <td><strong>Name</strong></td>
      <td><strong>Tickets</strong></td>
      <td><strong>Details</strong></td>
    </tr>
    <% @attractions.each do |a| %>
      <tr>
        <td><%= a.name %></td>
        <td><%= a.tickets %></td>
        <% if @user.admin %>
          <td><%= link_to "Show #{a.name}", attraction_path(a) %></td>
        <% else %>
          <td><%= link_to "Go on #{a.name}", attraction_path(a) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  <% if @user.admin %>
    <td><%= link_to "New Attraction", new_attraction_path%></td>
  <% end %>
</table>
